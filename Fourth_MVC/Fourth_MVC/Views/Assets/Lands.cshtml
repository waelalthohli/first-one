@model IEnumerable<Fourth_MVC.Models.Land>

@{
    ViewData["Title"] = "الأراضي";
}

<div dir="rtl" style="text-align:right;">
    <h1 class="text-primary mb-4">استثمار الأراضي </h1>

    @if (!Model.Any())
    {
        <p class="text-muted">لا توجد أراضي حالياً.</p>
    }
    else
    {
        <div class="row">
            @foreach (var land in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title text-primary">@land.Name</h5>
                            <p class="card-text"><strong>الموقع:</strong> @land.Location</p>
                            <p class="card-text"><strong>المساحة:</strong> @land.Area</p>
                            <p class="card-text">@land.Description</p>
                        </div>
                        <div class="card-footer bg-transparent text-center">
                            <a href="https://tatwir.om/public/auctions" target="_blank" class="btn btn-success">
                                💼 تقديم طلب استثمار
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
