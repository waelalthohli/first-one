@model Fourth_MVC.Models.Complex

@{
    ViewData["Title"] = "Delete";
}

<div dir="rtl" style="text-align:right;">

    <h2>هل أنت متأكد أنك تريد حذف هذه مبنى المجمع؟</h2>

    <div>
        <dl class="row">
            <dt class="col-sm-2">اسم مبنى المجمع</dt>
            <dd class="col-sm-10">@Model.Name</dd>

            <dt class="col-sm-2">الموقع</dt>
            <dd class="col-sm-10">@Model.Location</dd>

            <dt class="col-sm-2">السعة</dt>
            <dd class="col-sm-10">@Model.Capacity</dd>

            <dt class="col-sm-2">الوصف</dt>
            <dd class="col-sm-10">@Model.Description</dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">🗑️ حذف</button>
        <a asp-action="Index" class="btn btn-secondary">⬅️ إلغاء</a>
    </form>
</div>
