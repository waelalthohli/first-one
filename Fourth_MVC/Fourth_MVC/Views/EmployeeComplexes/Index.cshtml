@model IEnumerable<Fourth_MVC.Models.Complex>

@{
    ViewData["Title"] = "Index";
}


<div dir="rtl" style="text-align:right;">


    <h2>مباني المجمعات الرياضية </h2>

    <p>
        <a asp-action="Create" class="btn btn-primary">➕ إضافة مبنى جديد</a>
    </p>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>

                <th>نوع المبنى</th>
                <th>الموقع</th>
                <th>السعة</th>
                <th>الوصف</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.Name</td>
                    <td>@item.Location</td>
                    <td>@item.Capacity</td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">📄 تفاصيل</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">✏️ تعديل</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">🗑️ حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>